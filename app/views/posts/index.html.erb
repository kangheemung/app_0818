<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% if session[:user_id] %>
    <%= form_for @post, url: posts_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit %>
    <% end %>
    
    <p><% @posts.each do |post|%>
    <%=link_to post.title,"/posts/:id" %>|<%= post.updated_at %>｜
    <%= current_user.name %>さんの投稿
    
    <% end %></p>
   
<% else %>
  <p> <%= link_to "ログイン","/login"%> </p>
<% end %>