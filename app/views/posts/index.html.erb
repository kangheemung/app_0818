<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% if session[:user_id] %>
    <%= form_for @post, url: posts_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit %>
    <% end %>
    
  <p><% @posts.each do |post|%>
       <%=link_to post.title,"/post" %>|<%= post.updated_at %>｜
       <%=User.find(session[:user_id]).name%>さんの投稿<br>
       <% end %></p>
   
<% else %>
<p> <%= link_to "ログイン","/login"%> </p>
<p> <% @posts.each do |post|%>
       <%=link_to post.title,"/post" %>|<%= post.updated_at %>｜
       <%= post.user_id%>さんの投稿<br>
       <% end %></p>
 
<% end %>